<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="zonaapp.co.fashionstore.Fragments.FragmentAcercade">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:elevation="14dp"
        android:padding="12dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:text="Versión:"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/colorNegro"
                android:layout_height="match_parent"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="match_parent"
                android:text="1.0"
                android:textColor="@color/colorNegro"
                android:layout_weight="1.3"
                android:layout_height="match_parent"
                android:gravity="center_vertical" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.9"
                android:id="@+id/erw" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:text="Nombre:"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/colorNegro"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="FASHION STORE"
                android:layout_weight="1.3"
                android:textColor="@color/colorNegro"
                android:layout_height="match_parent"
                android:gravity="center_vertical" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"
                android:layout_weight="1.9"
                android:id="@+id/imageView2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="9dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:text="Utilidad:"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/colorNegro"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="Aplicación para realizar compras a los mejores almacenes de la ciudad, con el mejor soporte y calidad de la marca."
                android:layout_weight="1.1"
                android:textColor="@color/colorNegro"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="9dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:text="Desarrollado:"
                android:layout_weight="1"
                android:textColor="@color/colorNegro"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="ZONAAPP.CO"
                android:layout_weight="1.3"
                android:layout_height="match_parent"
                android:textColor="@color/colorNegro"
                android:gravity="center_vertical" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo_zona_app"
                android:layout_weight="1.9"
                android:id="@+id/imageView3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="9dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:text="Contacto:"
                android:layout_weight="1"
                android:textColor="@color/colorNegro"
                android:textStyle="bold"
                android:layout_height="match_parent"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="match_parent"
                android:text="info@zonaapp.co"
                android:layout_weight="1.1"
                android:textColor="@color/colorNegro"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compartir"
                android:id="@+id/button2"
                style="@style/BrandButtonStyle"
                android:drawableRight="@drawable/ic_share_black_18dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_height="2dp"/>

    </LinearLayout>

</LinearLayout>
